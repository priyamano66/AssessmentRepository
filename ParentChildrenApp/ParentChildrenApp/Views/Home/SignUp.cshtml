@model ParentRegistrationModel
@{
    ViewData["Title"] = "SignUp";
}

<div class="row">
    <div class="col-md-8">
        @{
            string method=null;
            if (TempData["Action"] != null && TempData["Action"].ToString() == "Edit")
            {
                method = "UpdateUser";
            }
            else
            {
                method = "RegisterUser";
            }

          }
       

        <form asp-action="@method" class="mx-1 mx-md-8">

            @if (TempData["Action"] != null && TempData["Action"].ToString() == "Edit")
            {
            <div class="form-group">

                   
                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-4" })

                    @Html.TextBoxFor(model => model.Username,htmlAttributes:new{@readonly="readonly"})
                     <span class="text-danger" asp-validation-for="Username"></span>
                </div>
                
            }
            else
            {
                
            <div class="form-group">

                   
                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-4" })

                    @Html.TextBoxFor(model => model.Username)
                     <span class="text-danger" asp-validation-for="Username"></span>
            </div>
                
            }
            @if (TempData["Action"]!=null && TempData["Action"].ToString() == "Edit")
            {
                <div class="form-group" style="display:none">


                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-4" })

                    @Html.TextBoxFor(model => model.Password,htmlAttributes:new{@type="password"})
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group" style="display:none">


                    @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-4" })

                    @Html.TextBoxFor(model => model.ConfirmPassword)
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
            }
            else
            {
                <div class="form-group">


                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-4" })

                    @Html.TextBoxFor(model => model.Password,htmlAttributes:new{@type="password"})
            <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">


                    @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-4" })

                    @Html.TextBoxFor(model => model.ConfirmPassword,htmlAttributes:new{@type="password"})
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                </div>
                
            }

            @if (TempData["Action"] != null && TempData["Action"].ToString() == "Edit")
            {
                <div class="form-group">


                    @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-4" })

                    <span>
                        <input asp-for="Gender" disabled type="radio" id="Male" value="Male" name="Gender" /> Male
                    </span>
                    <span>
                        <input asp-for="Gender" disabled type="radio" id="Female" value="Female" name="Gender" /> Female
                    </span>
                    <span class="text-danger" asp-validation-for="Gender"></span>
                </div>
            }
            else
            {
                <div class="form-group">


                    @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-4" })

                    <span>
                        <input asp-for="Gender" type="radio" id="Male" value="Male" name="Gender" /> Male
                    </span>
                    <span>
                        <input asp-for="Gender" type="radio" id="Female" value="Female" name="Gender" /> Female
                    </span>
                    <span class="text-danger" asp-validation-for="Gender"></span>
                </div>
                
            }
            
            
            <div class="form-group">


                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-4" })

                @Html.TextBoxFor(model => model.FirstName)
            <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">


                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-4" })

                @Html.TextBoxFor(model => model.LastName)
            <span class="text-danger" asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">


                @Html.LabelFor(model => model.MobNo, htmlAttributes: new { @class = "control-label col-md-4" })

                @Html.TextBoxFor(model => model.MobNo)
            <span class="text-danger" asp-validation-for="MobNo"></span>
            </div>
            <div class="form-group">


                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4" })

                @Html.TextBoxFor(model => model.Email)
            <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">


                @Html.LabelFor(model => model.EmiratesID, htmlAttributes: new { @class = "control-label col-md-4" })

                @Html.TextBoxFor(model => model.EmiratesID)
            <span class="text-danger" asp-validation-for="EmiratesID"></span>
            </div>           

            @if (TempData["Action"]!=null && TempData["Action"].ToString() == "Edit")
            {

                <div class="d-flex left-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">Save</button>
                    <div class="col-md-6" style="float:right;margin-top:10px;font-weight:bold;font-size:medium;margin-left:150px">
                        @Html.ActionLink("Back to Children List", "Index","Child")
                    </div>
                    
                </div>
                
            }
            else
            {

                <div class="d-flex left-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                </div>
            }

        </form>
        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">

                window.onload = function () {
                    alert("@ViewBag.Message");
                };
            </script>
        }
    </div>
</div>


